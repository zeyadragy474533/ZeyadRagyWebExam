		<input name="Description" />
	</dev>
	<dev>
		<label>Status</label>
		<input name="Status" />
	</dev>
	<dev>
		<label>Priority</label>
		<input name="Priority" />
	</dev>
	<dev>
		<label>Deadline</label>
		<input name="Deadline" />
	</dev>
	<dev>
		<label>ProjectId</label>
		<input name="ProjectId" />
	</dev>
	<dev>
		<label>TeamMemberId</label>
		<input name="TeamMemberId" />
	</dev>

	<button type="submit" class="btn btn-success">Save</button>
</form>
